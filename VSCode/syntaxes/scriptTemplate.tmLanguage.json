{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "scriptTemplate",
    "patterns": [{
        "include": "#root"
    }],
    "fileTypes": [".template"],
    "repository": {
        "root" : {
            "patterns": [{
                "include" : "#autofields"
            }, {
                "include" : "#manualfields"
            }]
        },
        "autofields": {
            "patterns": [{
                "name"          : "meta.tag.auto.scriptTemplate",
                "match"         : "\\%\\%(PAGENAME|USERNAME|MEMBERLEVEL|YOURNAME|YOURFIRSTNAME|STAFFLEVEL)\\%\\%",
                "captures"	    : {
                    "1"         : { "name"  : "variable.other.constant" }
                }
            }]
        },
        "manualfields": {
            "patterns": [{
                "name"          : "meta.tag.manual.scriptTemplate",
                "match"         : "\\[\\[([^\\]]*)\\]\\]",
                "captures"	    : {
                    "1"         : { "name"  : "entity.name.class" }
                }
            }]
        }
    },
    "scopeName"	: "source.scriptTemplate"
}